{
  "manifest_version": 2,

  "name": "QRtube",
  "description": "This extension generates QR codes based on content of the page",
  "version": "1.0",

  "permissions": [
     "tabs",
     "contextMenus",
     "http://*/",
     "https://*/"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "qrtube.html"
  },

  "content_scripts": [ {
    "js": [ "jquery.min.js", "qrcode.min.js", "qrtube.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }]
}